# HTML - no cache (SPA needs fresh index.html)
/index.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Preload critical assets for faster initial load
/
  Link: </assets/js/vendor-react-*.js>; rel=modulepreload; as=script
  Link: </assets/js/vendor-router-*.js>; rel=modulepreload; as=script
  Link: </assets/js/vendor-ui-utils-*.js>; rel=modulepreload; as=script
  Link: </assets/images/Rep_Club_Gym.webp>; rel=preload; as=image; fetchpriority=high
  Link: <https://fonts.googleapis.com>; rel=preconnect
  Link: <https://fonts.gstatic.com>; rel=preconnect; crossorigin

# JavaScript files - immutable with hash (1 year cache)
/assets/js/*.js
  Content-Type: application/javascript; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

# CSS files - immutable with hash (1 year cache)
/assets/css/*.css
  Content-Type: text/css; charset=utf-8
  Cache-Control: public, max-age=31536000, immutable
  Vary: Accept-Encoding

# Image assets in build output - immutable (1 year cache)
/assets/images/*
  Cache-Control: public, max-age=31536000, immutable

# Font assets - immutable (1 year cache)
/assets/fonts/*
  Cache-Control: public, max-age=31536000, immutable

# All other build assets - immutable (1 year cache)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Static images in public folder (may change) - 1 week cache
/*.webp
  Cache-Control: public, max-age=604800, stale-while-revalidate=86400

